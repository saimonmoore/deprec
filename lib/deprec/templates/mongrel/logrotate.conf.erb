/var/www/apps/<%= application %>/shared/log/production.log /var/www/apps/<%= application %>/shared/log/mongrel.*.log {
  daily
  rotate 14
  dateext
  missingok
  compress
  sharedscripts
  postrotate
    for i in `ls /var/www/apps/<%= application %>/shared/pids/mongrel.*.pid`; do
      kill -USR2 `cat $i`
    done
  endscript
}
	

